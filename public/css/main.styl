/* Start using nib (npm install nib) to handle the various x-browser ish */

/* For debugging */
imagePrefix="/img/"

/* Images */
bodyBg = imagePrefix + 'bg_pattern_400x400.png'
bodyBgMobile = imagePrefix + 'bg_pattern_200x200.png'

/* Stylus variables */
linkTransitionTime = 0.4s
bodyTransitionTime = 0.8s
halpha = 0.65

// Theme-colors
bleu = #15aaaa
grey = #666

body, h1, h2, ul, li, p, img, a
  margin 0
  padding 0
  outline 0

body
  font 100% 'Helvetica Neue', Arial, sans-serif
  color grey
  text-shadow 1px 1px 2px rgba(255,255,255,0.6)
  background #fff url(bodyBg) repeat scroll 0 0

body.index
  opacity 0

body.slick
  opacity 1
  transition opacity bodyTransitionTime linear  
  -webkit-animation slick bodyTransitionTime linear 1
  -moz-transition opacity bodyTransitionTime linear  
  -o-transition opacity bodyTransitionTime linear  
  -ms-transition opacity bodyTransitionTime linear  

@keyframes slick
  from
    opacity 0
  to
    opacity 1
  
li
  list-style none
  padding 4px 6px

h1
  text-align center
  line-height 1em
  font-size 2.4em
  font-weight 300

h2
  line-height 2em
  vertical-align middle

h3
  line-height 2
  font-size 1.5em
  margin 10px auto 0
  font-weight 400

p
  line-height 1.3em

#main
  width 94%
  margin 24px auto 0
  text-align center
  max-width 840px

a, a:visited
  color bleu
  text-decoration none
  text-shadow 0 0 0 rgba(0,0,0,0)
  font-weight 300

a:hover, a:focus, a:active
  color #000
  -moz-transition .4s color linear
  -webkit-transition .4s color linear

.shadow
  border 1px solid #cccccc
  border-radius 8px
  -moz-border-radius 8px
  -webkit-border-radius 8px
  -moz-box-shadow 0 15px 80px rgba(0, 0, 0, 0.48)
  -webkit-box-shadow 0 15px 80px rgba(0, 0, 0, 0.48)

.shadowbox  
  -webkit-box-shadow 0 0px 5px rgba(0, 0, 0, 0.3), inset 0 0 10px rgba(0,0,0,0.05)
  border-radius 4px
  position relative
  margin 0 auto
  background-color rgba(255,255,255,0.5)
  padding 20px 20px 30px
  max-width 600px

.pipe
  color bleu
  padding 0 10px

.left
  float left

.right
  float right

.full
  width 100%

.half
  width 50%

.weight_300
  font-weight 300

.pad10
  padding 10px

.pad20
  padding 20px

.margin10
  margin 10px

.margin20
  margin 20px

.marginTop10
  margin-top 10px

.marginTop20
  margin-top 20px

.marginBottom10
  margin-bottom 10px

.marginBottom20
  margin-bottom 20px

.invisible
  visibility hidden

.justify
  text-align justify
  
.both
  clear both

.display_ib
  display inline-block

.display_b
  display block

.even
  background #eee
  border 1px solid #ddd

.odd
  border-left 1px solid #ddd
  border-right 1px solid #ddd
